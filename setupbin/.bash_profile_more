function nest_project {
  dir=$1
  file_list=/tmp/${dir}-file-list
  mkdir $dir
  exit_code=$?
  if [ $exit_code != 0 ]; then
    echo "ERROR: Could not create directory"
  else
    ls -a | grep -vE "^\.git$" | grep -vE "^\.$" | grep -vE "^\.\.$" | grep -vE "^${dir}$" > $file_list
    while read line; do
      echo "INFO: Running: mv $line ${dir}/"
      mv $line ${dir}/  
    done < $file_list
  fi
}
